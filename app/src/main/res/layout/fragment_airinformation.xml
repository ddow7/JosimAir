<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/yellow_frame"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/yellow_back" />

        <ImageView
            android:id="@+id/red_frame"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_toRightOf="@id/yellow_frame"
            android:layout_marginLeft="-10dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/red_back" />

        <ImageView
            android:id="@+id/green_frame"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_toLeftOf="@id/yellow_frame"
            android:layout_centerInParent="true"
            android:layout_marginRight="-10dp"
            app:srcCompat="@drawable/green_back" />

        <ImageView
            android:id="@+id/yellow_light"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/yellow" />

        <ImageView
            android:id="@+id/red_light"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_toRightOf="@id/yellow_light"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/green_light"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_toLeftOf="@id/yellow_light"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/green" />

        <ImageView
            android:id="@+id/air_face"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_above="@id/yellow_light"
            app:srcCompat="@drawable/smile" />

        <TextView
            android:id="@+id/airQualityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_string"
            android:layout_above="@id/airInfoTextView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/airInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yellow_light"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textSize="30dp"
            android:text="@string/air_quality_good" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>